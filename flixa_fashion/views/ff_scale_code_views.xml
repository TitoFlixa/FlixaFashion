        <!-- Scale Codes Sizes Tree View -->
        <record id="ff_scale_code_sizes_tree_view" model="ir.ui.view">
            <field name="name">Scale Code Sizes Tree View</field>
            <field name="model">product.attribute.value</field>
            <field name="arch" type="xml">
                <tree string="Scale Code Sizes" editable="bottom">
                    <field name="sequence" widget="handle"/>
                    <field name="attribute_id" readonly="1"/>
                    <field name="name"/>
                </tree>
            </field>
        </record>
        
        
        
        <!-- Scale Codes Sizes Action Filters is_size=True and sets defaults on Form view -->                
        <record id="ff_scale_code_sizes_action" model="ir.actions.act_window">
            <field name="name">Scale Codes Sizesn</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">product.attribute.value</field>
            <field name="view_mode">tree</field>
            <field name="view_type">form</field>
            <field name="domain">[('is_size','=',True)]</field>
            <field name="context">{'default_is_size':True}</field>
            <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'tree', 'view_id': ref('ff_scale_code_sizes_tree_view')})]"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Define a new Scale Code Sizes
                </p>
            </field>
        </record>
        
        
        <!-- Scale Codes Menuitem Stock/Configuration -->                        
        <menuitem id="ff_menu_action_scale_code_values"
                  name="Scale Code Sizes"
                  action="ff_scale_code_sizes_action"
                  parent="stock.menu_product_in_config_stock"
                  sequence="7"
                  groups="stock.group_stock_manager"/>

    </data>
</odoo>