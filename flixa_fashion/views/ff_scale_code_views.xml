<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- explicit list view definition -->
        <record id="ff_scale_code_view_list" model="ir.ui.view">
            <field name="name">Scale Codes</field>
            <field name="model">ff.scale.code</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" />
                </tree>
            </field>
        </record>
        <!-- explicit form view definition -->
        <record id="ff_scale_code_view_form" model="ir.ui.view">
            <field name="name">Scale Code</field>
            <field name="model">ff.scale.code</field>
            <field name="arch" type="xml">
                <form string="Scale Code">
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" />
                            <h1>
                                <field name="name" placeholder="Scale Code" required="True" />
                            </h1>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>