<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.flixafashion</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="5" />
            <field name="inherit_id" ref="base.res_config_settings_view_form" />
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('settings')]" position="inside">
                    <h2>FlixaFashion</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-md-12 col-lg-12 o_setting_box">
                            <h3 style="color:#007a77 !important">Product Matrix Setup</h3>
                        </div>
                        <div class="col-md-6 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="module_size_scale" />
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="module_size_scale" />
                                <div class="text-muted">
                                    Configure multiple size scales for your products.
                                </div>
                                <div class="content-group">
                                    </div>
                                </div>
                            </div>
                        </div>
                </xpath>
            </field>
        </record>
        
        
