<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.flixafashion</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="5" />
            <field name="inherit_id" ref="base.res_config_settings_view_form" />
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('settings')]" position="inside">
                    <h2>FlixaFashion</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-md-12 col-lg-12 o_setting_box">
                            <h3 style="color:#007a77 !important">Product Matrix Setup</h3>
                        </div>
                        <div class="col-md-6 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="module_size_scale" />
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="module_size_scale" />
                                <div class="text-muted">
                                    Configure multiple size scales for your products.
                                </div>
                                <div class="content-group">
                                    <div class="mt16" attrs="{'invisible': [('module_size_scale', '=', False)]}">
                                        <button name="%(flixa_fashion.action_size_scale)d" icon="fa-arrow-right" type="action" string="Configure Attributes" class="btn-link" />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="module_color_palette" />
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="module_color_palette" />
                                <div class="text-muted">
                                    Define a collection of color codes to assign as a group to your products.
                                </div>
                                <div class="content-group">
                                    <div class="mt16" attrs="{'invisible': [('module_color_palette', '=', False)]}">
                                        <button name="%(flixa_fashion.action_color)d" icon="fa-arrow-right" type="action" string="Configure Attributes" class="btn-link" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12 col-lg-12 o_setting_box">
                        <h3 style="color:#007a77 !important">Business Intelligence and reporting</h3>
                    </div>
                    <div class="row mt16 o_settings_container">
                        <div class="col-md-6 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="module_season_codes" />
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="module_season_codes" />
                                <div class="text-muted">
                                    Associate your products with a specific season such as (Spring Collection, Summer Collection, etc.)
                                </div>
                                <div class="content-group">
                                    <div class="mt16" attrs="{'invisible': [('module_season_codes', '=', False)]}">
                                        <button name="%(flixa_fashion.action_res_season)d" icon="fa-arrow-right" type="action" string="Configure Season" class="btn-link" />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="module_division_codes" />
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="module_division_codes" />
                                <div class="text-muted">
                                    Associate your products with a specific division code such as (Menswear, Women ware, Children, etc.)
                                </div>
                                <div class="content-group">
                                    <div class="mt16" attrs="{'invisible': [('module_division_codes', '=', False)]}">
                                        <button name="%(flixa_fashion.action_division_code)d" icon="fa-arrow-right" type="action" string="Configure Attributes" class="btn-link" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row mt16 o_settings_container">
                        <div class="col-md-6 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="module_classification_codes" />
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="module_classification_codes" />
                                <div class="text-muted">
                                    Associate your products with a specific Classification code such as (Pants, T Shirts, Accessories, etc.)
                                    <div class="content-group"><div class="mt16" attrs="{'invisible': [('module_classification_codes', '=', False)]}"><button name="%(flixa_fashion.action_classification_code)d" icon="fa-arrow-right" type="action" string="Configure Attributes" class="btn-link" /></div></div></div>
                            </div>
                        </div>
                        <div class="col-md-6 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="module_designer_codes" />
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="module_designer_codes" />
                                <div class="text-muted">
                                    Associate your products with a specific designer.
                                    <div class="content-group"><div class="mt16" attrs="{'invisible': [('module_designer_codes', '=', False)]}"><button name="%(flixa_fashion.action_designer_code)d" icon="fa-arrow-right" type="action" string="Configure Attributes" class="btn-link" /></div></div></div>
                            </div>
                        </div>
                    </div>
                    <div class="row mt16 o_settings_container">
                        <div class="col-md-6 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="module_collection_codes" />
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="module_collection_codes" />
                                <div class="text-muted">
                                    Associate your products with a specific collection code.
                                    <div class="content-group"><div class="mt16" attrs="{'invisible': [('module_collection_codes', '=', False)]}"><button name="%(flixa_fashion.action_collection_code)d" icon="fa-arrow-right" type="action" string="Configure Attributes" class="btn-link" /></div></div></div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
        <record id="flixa_config_settings_action" model="ir.actions.act_window">
            <field name="name">Settings</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.config.settings</field>
            <field name="view_id" ref="res_config_settings_view_form" />
            <field name="view_mode">form</field>
            <field name="target">inline</field>
            <field name="context">{'module' : 'flixa_fashion'}</field>
        </record>
        <menuitem name="Settings" id="flixa_fashion_setting_menu" parent="flixa_base_menu" action="flixa_config_settings_action" sequence="50" />
    </data>
</odoo>