<?xml version="1.0" encoding="utf-8"?>



<odoo>
  <data>



      
    <!-- explicit list view definition -->

    <record id="ff_classification_code_view_list" model="ir.ui.view">
      <field name="name">Classification Codes</field>
      <field name="model">ff.classification.code</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
        </tree>
      </field>
    </record>

    <!-- explicit form view definition -->

    <record id="ff_classification_code_view_form" model="ir.ui.view">
      <field name="name">Classification Code</field>
      <field name="model">ff.classification.code</field>
      <field name="arch" type="xml">
        <form string="Classification Code">
            <sheet>
                <group>
                    <field name="name"/>
                </group>
            </sheet>
        </form>
      </field>
    </record>
    
    
    </data>
</odoo>